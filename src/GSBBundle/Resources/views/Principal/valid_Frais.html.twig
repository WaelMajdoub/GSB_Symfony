{% extends "@GSB/Default/base.html.twig" %}
{% block stylePerso %}
    <style type="text/css">

    </style>
{% endblock %}
{% block body %}
    <body>
    {% include('@GSB/Principal/Comptable/sideBarValidFrais.html.twig') %}
    <div name="droite" style="float:left;width:80%;">
        <div name="haut" style="margin: 2 2 2 2 ;height:10%;float:left;"><h1>Validation des Frais</h1></div>
        <div name="bas" style="margin : 10 2 2 2;clear:left;background-color:EE8844;color:orangered;height:88%;">
            <form name="formValidFrais" method="post" action="enregValidFrais.php">
                <h1> Validation des frais par visiteur </h1>
                <label class="titre">Choisir le visiteur :</label>
                <select style="color: orangered;" id="visiteurSelectionne" class="zone">
                    {% for user in visiteurs %}
                        <option value={{ user.id }}>{{ user.nom }} - {{ user.prenom }}</option>
                    {% endfor %}
                </select>
                <label class="titre">Mois :</label>

                <select style="color: orangered;" id="selectMoisDispo" class="zone">

                </select>
                <p class="titre"/>
                <div style="clear:left;"><h2>Frais au forfait </h2></div>
                <table style="color: orangered;" border="1" class="table table-condense">
                    <tr>
                        <th>Repas midi</th>
                        <th>Nuitée</th>
                        <th>Etape</th>
                        <th>Km</th>
                        <th>Situation</th>
                    </tr>
                    <tr align="center">
                        <td id="txtRepasMidi" ><input type="text" name="repas" value="dsqdsqdsq"/></td>
                        <td id="txtNuitee"><input type="text" name="nuitee" value="dsqdsq"/></td>
                        <td id="txtEtape"><input type="text" name="etape" value=""/></td>
                        <td><input  id="txtKm" type="text" name="km" value=""/></td>
                        <td>
                            <select size="3" name="situ">
                                <option value="E">Enregistré</option>
                                <option value="V">Validé</option>
                                <option value="R">Remboursé</option>
                            </select></td>
                    </tr>
                </table>
                <p class="titre"/>
                <div style="clear:left;"><h2>Hors Forfait</h2></div>


                <table style="color: orangered;" border="1" class="table table-condense">
                    <tr>
                        <th>Date</th>
                        <th>Libellé</th>
                        <th>Montant</th>
                        <th>Situation</th>
                    </tr>
                    <tr align="center">
                        <td width="100"><input type="text" size="12" name="hfDate1"/></td>
                        <td width="220"><input type="text" size="30" name="hfLib1"/></td>
                        <td width="90"><input type="text" size="10" name="hfMont1"/></td>
                        <td width="80">
                            <select size="3" name="hfSitu1">
                                <option value="E">Enregistré</option>
                                <option value="V">Validé</option>
                                <option value="R">Remboursé</option>
                            </select></td>
                    </tr>
                </table>
                <p class="titre"></p>
                <div class="titre">Nb Justificatifs</div>
                <input type="text" class="zone" size="4" name="hcMontant"/>
                <p class="titre"/><label class="titre">&nbsp;</label><input class="zone" type="reset"/><input
                        class="zone" type="submit"/>
            </form>
        </div>
    </div>
    </body>

    {% block js %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset('js/master.js') }}"></script>

    {% endblock %}
{% endblock %}