{% extends "@GSB/Default/base.html.twig" %}
{% block title %}
	Saisie/Gestion des frais de visite
{% endblock %}

{% block body %}
    {{ include('@GSB/Default/head.html.twig') }}
	<div class="row">
		<h2>Renseigner ma fiche de frais du mois {{ mois |slice(4,6) }}-{{ mois |slice(0,4) }}</h2>
		<h3>Eléments forfaitisés</h3>
		<div class="col-md-4">
			<form method="post" action="index.php?uc=gererFrais&action=validerMajFraisForfait" role="form">
				<fieldset>
                    {% for unfraisf in lesfraisf %}
						<div class="form-group">
							<label for="idFrais">{{ unfraisf.fraisforfait.libelle }}</label>
							<input type="text" id="idFrais" name="{{ unfraisf.id }}" size="10" maxlength="5" value="{{ unfraisf.quantite }}" class="form-control">
						</div>
                    {% endfor %}
					<button class="btn btn-success" type="submit">TODO Ajouter</button>
					<button class="btn btn-danger" type="reset">Effacer</button>
				</fieldset>
			</form>
		</div>
	</div>

	<hr>
	<div class="row">
		<div class="panel panel-info">
			<div class="panel-heading">Descriptif des éléments hors forfait</div>
			<table class="table table-bordered table-responsive">
				<thead>
					<tr>
						<th class="date">Date</th>
						<th class="libelle">Libellé</th>
						<th class="montant">Montant</th>
						<th class="action">&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					{% for unfraishf in lesfraishf %}
						<tr>
							<td>{{ unfraishf.mois |slice(4,6) }}-{{ unfraishf.mois |slice(0,4) }}</td>
							<td>{{ unfraishf.libelle }}</td>
							<td>{{ unfraishf.montant }}</td>
							<td><a href="" onclick="return confirm('TODO supprimer ce frais?');"> TODO Supprimer ce frais</a></td>
							<!-- { path('deletefhf', { 'id': unfraishf.id }) }} -->
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<h3>Nouvel élément hors forfait</h3>



		<div class="col-md-4">

            {{ form_start(form) }}

			<!-- <form action="index.php?uc=gererFrais&action=validerCreationFrais" method="post" role="form"> -->
				<div class="form-group">
					<!-- <label for="txtDateHF">Date (jj/mm/aaaa): </label> -->
                    {{ form_label(form.date) }}
					<div class="input-group">
						<!-- <input type="text" id="txtDateHF" name="dateFrais" class="form-control" id="text"> -->
						{{ form_widget(form.date) }}
					</div>
				</div>
				<div class="form-group">
					<!-- <label for="txtLibelleHF">Libellé</label> -->
                    {{ form_label(form.libelle) }}
					<div class="input-group">
						<!-- <input type="text" id="txtLibelleHF" name="libelle" class="form-control" id="text"> -->
                    	{{ form_widget(form.libelle) }}
					</div>
				</div>
				<div class="form-group">
					<!-- <label for="txtMontantHF">Montant : </label> -->
                    {{ form_label(form.montant) }}
					<div class="input-group">
						<!-- <span class="input-group-addon">€</span> -->
						<!-- <input type="text" id="txtMontantHF" name="montant" class="form-control" value=""> -->
                        {{ form_widget(form.montant) }}
					</div>
				</div>
				<!-- <button class="btn btn-success" type="submit">TODO Ajouter</button> -->
				<!-- <button class="btn btn-danger" type="reset">Effacer</button> -->
                {{ form_end(form) }}
			<!-- </form> -->
		</div>
	</div>
{% endblock %}